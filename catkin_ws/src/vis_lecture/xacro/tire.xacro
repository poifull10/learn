<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="make_tire" params="suffix parent xyz rpy radius length">
    <joint name="${suffix}_joint" type="continuous">
      <parent link="${parent}" />
      <child link="${suffix}_link" />
      <origin xyz="${xyz}" rpy="${rpy}" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${suffix}_link">
      <visual>
        <geometry>
          <cylinder radius="${radius}" length="${length}" />
        </geometry>
        <material name="gray">
          <color rgba="0.3 0.3 0.3 2.0" />
        </material>
        <origin xyz="0 0 0" rpy="0 0 0" />
      </visual>
      <inertial>
        <mass value="0.1" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001" />
      </inertial>
      <collision>
        <geometry>
          <cylinder radius="${radius}" length="${length}" />
        </geometry>
      </collision>
    </link>

    <gazebo reference="${suffix}_link">
      <material>
        Gazebo/Gray
      </material>
    </gazebo>
  </xacro:macro>

</robot>
